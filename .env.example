# ==============================================================================
# DossX Environment Variables
# Copy this file to .env.local and fill in your values
# Do NOT commit secrets to version control
# ==============================================================================

# ------------------------------------------------------------------------------
# CLERK AUTHENTICATION
# https://clerk.com/docs/quickstarts/nextjs
# ------------------------------------------------------------------------------
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_REPLACE_ME
CLERK_SECRET_KEY=sk_test_REPLACE_ME

# Clerk redirect URLs (optional - defaults work for most cases)
# NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
# NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
# NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/dashboard
# NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/voxia/onboarding

# ------------------------------------------------------------------------------
# DATABASE (PostgreSQL)
# Use Supabase, Neon, or any PostgreSQL-compatible database
# ------------------------------------------------------------------------------
DATABASE_URL=postgresql://user:password@localhost:5432/dossx?schema=public

# ------------------------------------------------------------------------------
# STRIPE PAYMENTS
# https://stripe.com/docs/keys
# ------------------------------------------------------------------------------
STRIPE_SECRET_KEY=sk_test_REPLACE_ME
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_REPLACE_ME
STRIPE_WEBHOOK_SECRET=whsec_REPLACE_ME

# Voxia Plan Price IDs (create these in Stripe Dashboard)
STRIPE_PRICE_VOXIA_LAUNCH=price_REPLACE_ME
STRIPE_PRICE_VOXIA_GROWTH=price_REPLACE_ME
STRIPE_PRICE_VOXIA_SCALE=price_REPLACE_ME

# Customer portal return URL
STRIPE_CUSTOMER_PORTAL_RETURN_URL=http://localhost:3000/dashboard/billing

# ------------------------------------------------------------------------------
# ENCRYPTION
# Used for encrypting OAuth tokens stored in database
# Generate with: openssl rand -hex 32
# ------------------------------------------------------------------------------
TOKEN_ENCRYPTION_SECRET=REPLACE_WITH_64_HEX_CHARACTERS

# ------------------------------------------------------------------------------
# AWS S3 (for file uploads)
# Optional - file uploads will show placeholder without this
# ------------------------------------------------------------------------------
S3_BUCKET=
S3_REGION=us-east-1
S3_ACCESS_KEY_ID=
S3_SECRET_ACCESS_KEY=

# ------------------------------------------------------------------------------
# GOOGLE CALENDAR OAUTH
# https://console.cloud.google.com/apis/credentials
# ------------------------------------------------------------------------------
GOOGLE_OAUTH_CLIENT_ID=
GOOGLE_OAUTH_CLIENT_SECRET=
GOOGLE_OAUTH_REDIRECT_URL=http://localhost:3000/api/oauth/google/callback

# ------------------------------------------------------------------------------
# MICROSOFT CALENDAR OAUTH (Azure AD)
# https://portal.azure.com/#blade/Microsoft_AAD_RegisteredApps
# ------------------------------------------------------------------------------
MICROSOFT_OAUTH_CLIENT_ID=
MICROSOFT_OAUTH_CLIENT_SECRET=
MICROSOFT_OAUTH_REDIRECT_URL=http://localhost:3000/api/oauth/microsoft/callback

# ------------------------------------------------------------------------------
# EMAIL (Resend)
# https://resend.com
# ------------------------------------------------------------------------------
RESEND_API_KEY=re_REPLACE_ME

# Fallback email settings
SALES_EMAIL=hello@dossx.com
FROM_EMAIL=noreply@dossx.com

# ------------------------------------------------------------------------------
# SUPABASE (legacy - for newsletter subscribers)
# ------------------------------------------------------------------------------
NEXT_PUBLIC_SUPABASE_URL=
SUPABASE_SERVICE_ROLE_KEY=

# ------------------------------------------------------------------------------
# APPLICATION
# ------------------------------------------------------------------------------
NEXT_PUBLIC_APP_URL=http://localhost:3000
